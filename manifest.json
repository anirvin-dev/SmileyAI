{
  "manifest_version": 3,
  "name": "Smiley AI", 
  "version": "1.1.0",
  "description": "Takes screenshot (Cmd/Ctrl+Shift+O), sends to OpenAI to answer tasks or summarize.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
    
  ],
  "host_permissions": [
    "https://api.openai.com/*" 
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "commands": {
    "take_screenshot_analyze": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Take Screenshot and Ask AI to Perform Task or Summarize"
    }
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Screenshot Task AI Settings",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
